<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <!--Logo-->
    <div class="text-center">
        <img src="~/Assists/Logo.png" style="max-width:100%;" />
    </div>

    <div class="container">
        <!--Sidebar-->
        <div class="fixed-sidebar" style="position: fixed;width: 250px;">
            <div class="list-group">
                <a href="#" class="list-group-item">Home Page Content</a>
                <a href="#" class="list-group-item">News Page Content</a>
                <a href="#" class="list-group-item">Newsletter List</a>
                <a href="#" class="list-group-item">Modify User List</a>
                <a href="#" class="list-group-item active">Return to Home Page</a>
            </div>
        </div>

        <!--Content-->
        <div class="fixed-sidebar-content" style="margin-left: 270px;">
            <div class="row">
                <div class="col-xs-12">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>